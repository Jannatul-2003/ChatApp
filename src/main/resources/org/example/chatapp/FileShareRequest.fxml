<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.chatapp.controller.FileShareRequestController">
   <children>
      <Label layoutX="48.0" layoutY="37.0" prefHeight="38.0" prefWidth="187.0" text="Receive File Request:">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="filePathText" layoutX="124.0" layoutY="112.0" prefHeight="26.0" prefWidth="251.0" />
      <Label fx:id="fileNameLabel" layoutX="235.0" layoutY="46.0" prefHeight="20.0" prefWidth="260.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="browseButton" layoutX="396.0" layoutY="112.0" mnemonicParsing="false" onAction="#browseButtonClick" prefHeight="26.0" prefWidth="68.0" text="Browse" />
      <Label layoutX="48.0" layoutY="113.0" prefHeight="38.0" prefWidth="47.0" text="Path:">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Label>
      <Button layoutX="167.0" layoutY="196.0" mnemonicParsing="false" onAction="#saveButtonClick" prefHeight="26.0" prefWidth="59.0" text="Save" />
      <Button layoutX="305.0" layoutY="196.0" mnemonicParsing="false" onAction="#rejectButtonClick" prefHeight="26.0" prefWidth="59.0" text="Reject" />
   </children>
</AnchorPane>
